<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView01"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/azalea"
        android:alpha="0.2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:contentDescription="@string/azalea" />

    <ImageView
        android:id="@+id/imageView00"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/azalea"
        android:alpha="0.2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:scaleX="-1"
        android:layout_margin="10dp"
        android:contentDescription="@string/azalea" />

    <ImageView
        android:id="@+id/imgViewLogoMainAct"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:srcCompat="@drawable/logo_1_azalea"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:contentDescription="@string/azalea"
        android:layout_marginHorizontal="50dp"/>

    <RelativeLayout
        android:id="@+id/viewBg0"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/imgViewLogoMainAct"
        android:layout_marginTop="0dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/template_roundcorner_logandregister">

        <EditText
            android:id="@+id/editTextUserMainAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_alignParentTop="true"
            android:textSize="20sp"
            android:padding="15dp"
            android:hint="@string/usuario"
            android:background="@drawable/template_roundcorner_namepass"
            android:autofillHints="emailAddress"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editTextPasswordMainAct"
            android:layout_below="@id/editTextUserMainAct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="25dp"
            android:padding="15dp"
            android:background="@drawable/template_roundcorner_namepass"
            android:hint="@string/contrase_a"
            android:textSize="20sp"
            android:autofillHints="password"
            android:inputType="textPassword"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/buttonLogInMainAct"
            android:layout_width="match_parent"
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextPasswordMainAct"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/SecondaryAzalea"
            android:gravity="center"
            android:text="@string/iniciar_sesi_n"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/registerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonLogInMainAct"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:text="@string/no_tienes_una_cuenta_reg_strate"
            android:textColor="@color/SecondaryAzalea"
            />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="75dp"
            android:layout_height="115dp"
            app:srcCompat="@drawable/azalea"
            android:alpha="0.2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:contentDescription="@string/azalea" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="75dp"
            android:layout_height="115dp"
            app:srcCompat="@drawable/azalea"
            android:alpha="0.2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:scaleX="-1"
            android:layout_margin="10dp"
            android:contentDescription="@string/azalea" />

    </RelativeLayout>


</RelativeLayout>