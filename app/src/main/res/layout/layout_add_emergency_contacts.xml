<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAddContact"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:gravity="center"
        android:src="@drawable/pfp" />

    <ImageView
        android:id="@+id/availabilityAddContact"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:contentDescription="@string/availability"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameContactEmergency"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="5"
            tools:ignore="NestedWeights"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/emailAddContactEmergency"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:textSize="12sp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnAddContactList"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="@string/agregar"
        android:backgroundTint="@color/SecondaryAzalea"
        android:textColor="@color/white"
        android:gravity="center"
        android:padding="5dp"/>


</LinearLayout>